<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="317dp"
    android:layout_height="145dp"
    android:background="@drawable/background_alert"
    android:orientation="vertical"
    tools:context=".alert">

    <TextView
        android:id="@+id/tituloTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0sp"
        android:text="@string/mantemiento"
        android:textAppearance="@style/tituloAlert" />

    <TextView
        android:id="@+id/descripcionTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/descriptionAlert"
        android:textAppearance="@style/descriptionAlert" />

</LinearLayout>